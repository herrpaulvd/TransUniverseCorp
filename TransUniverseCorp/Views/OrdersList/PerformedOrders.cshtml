@{
}

@model ICollection<SharedModels.ShortOrderModel>

@foreach(var m in Model)
{
    @if(m.Ready)
    {
        <form method="post" action="../orderlist/commit">
            <input type="text" name="driver" value="@m.DriverName" readonly="readonly" />
            <input type="text" name="spaceship" value="@m.SpaceshipName" readonly="readonly" />
            <input type="number" name="cost" value="@m.Cost" readonly="readonly" />
            <input type="hidden" name="index" value="@m.Index" readonly="readonly" />
            <input type="hidden" name="ID" value="@m.ID" readonly="readonly" />
            <input type="submit" name="commit" value="COMMIT" />
        </form>
    }
    else
    {
        <div>@m.Error</div>
    }
    @if (m.Discardable || m.Ready)
    {
        <form method="post" action="../ordelist/discard">
            <input type="hidden" name="index" value="@m.Index" readonly="readonly" />
            <input type="hidden" name="ID" value="@m.ID" readonly="readonly" />
            <input type="submit" name="discard" value="DISCARD" />
        </form>
    }
}

