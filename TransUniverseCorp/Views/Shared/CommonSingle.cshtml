@model UnviersalMV.UniversalViewBag

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@

@foreach (var p in Model.Model.GetAllValues())
{
    @if (p.Type != "hidden")
    {
        <label for="@p.Name">@p.Name</label>
    }
    var t = p.Type == "checkbox" ? "text" : p.Type;
    <input type="@t" step="@p.Step" id="@p.Name" value="@p.Value" readonly="readonly" />
}

@{
}
